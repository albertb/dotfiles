Config { font = "xft:DejaVu Sans Mono:size=10"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run Weather "KSEA" ["-t","<skyCondition> <tempC>C","-L","15","-H","25","--normal","green","--high","red","--low","lightblue"] 36000
                    , Run Network "em1" ["-L","0","-H","1024","--normal","green","--high","red"] 10
                    , Run MultiCpu ["-t","Cpu%: <total>","-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Date "%a %b %_d %H:%M" "date" 10
                    , Run Com "date" ["--date=\"3 hours\"", "+\"%H:%M\""] "nyc-date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %multicpu% | %memory% - %swap% | %em1% | <fc=#ee9a00>%date%</fc> | NYC: %nyc-date% | %KSEA%"
       }
